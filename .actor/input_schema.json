{
    "title": "LinkedIn Post Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "email": {
            "title": "LinkedIn Email",
            "type": "string",
            "description": "Email for LinkedIn login (recommended)",
            "editor": "textfield"
        },
        "password": {
            "title": "LinkedIn Password",
            "type": "string",
            "description": "Password for LinkedIn login",
            "editor": "textfield",
            "isSecret": true
        },
        "li_at": {
            "title": "li_at Cookie (alternative)",
            "type": "string",
            "description": "li_at session cookie (alternative to email/password)",
            "editor": "textfield",
            "isSecret": true
        },
        "postUrl": {
            "title": "Post URL",
            "type": "string",
            "description": "LinkedIn post URL to scrape",
            "editor": "textfield"
        },
        "postUrls": {
            "title": "Post URLs",
            "type": "array",
            "description": "Multiple LinkedIn post URLs to scrape",
            "editor": "json",
            "items": {
                "type": "string"
            }
        }
    },
    "required": []
}
