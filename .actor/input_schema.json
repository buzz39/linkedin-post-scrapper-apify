{
  "title": "LinkedIn Post Scraper Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "postUrl": {
      "title": "LinkedIn Post URL",
      "type": "string",
      "description": "Single LinkedIn post/profile URL to scrape",
      "editor": "textfield",
      "example": "https://www.linkedin.com/posts/satyanadella_6988234986234-"
    },
    "postUrls": {
      "title": "LinkedIn Post URLs (Batch)",
      "type": "array",
      "editor": "select",
      "description": "Array of LinkedIn URLs to scrape in batch",
      "items": {
        "type": "string"
      }
    },
    "includeComments": {
      "title": "Include Comments",
      "type": "boolean",
      "description": "Attempt to scrape comments (experimental)",
      "default": false
    },
    "maxRetries": {
      "title": "Max Retries",
      "type": "integer",
      "description": "Number of retry attempts on failure",
      "default": 3,
      "minimum": 1,
      "maximum": 5
    }
  },
  "required": []
}
