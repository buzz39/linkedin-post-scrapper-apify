{
    "title": "LinkedIn Post Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "postUrl": {
            "title": "Post URL",
            "type": "string",
            "description": "LinkedIn post URL to scrape",
            "editor": "textfield"
        },
        "postUrls": {
            "title": "Post URLs (bulk)",
            "type": "array",
            "description": "Multiple LinkedIn post URLs to scrape (max 50 per run)",
            "editor": "json",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["postUrl"]
}
